<%- include("partials/header") %>

  <section style="margin-top: 10%;" id="blog" class="padd-sectio">
    <div class="container" data-aos="fade-up">
      <div class="section-title text-center">
        <h2>Latest Blogs</h2>
        <p class="separator">Explore your ideas and knowledge.</p>
      </div>
          <div class="card-container">
            <% data.forEach(function(blog) { %>
              <a href="/Blogs/<%= blog._id %>"> 
                <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Topic:<%= " "+blog.title %></h5>
                  <center><img style="
                    width: 100%;
                    height: 300px;
                    border-radius: 2%;
                    " src="<%= blog.coverImageUrl %>"></center>
                  <p class="card-text">Date:<%= blog.date %></p>
                </div>
              </a>
              </div>
            <% }) %>
          </div>
      </div>
    </div>
  </section>

  <%- include("./partials/footer") %>