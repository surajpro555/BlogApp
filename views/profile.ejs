<!DOCTYPE html>
<html>

<head>
  <title>Profile Page</title>
  <style>
    /* Base Styles */

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
    }

    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 40px;
    }

    .profile-image {
      width: 200px;
      height: 200px;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .button-container {
      margin-top: 20px;
      margin-bottom: 30px;
      display: flex;
      gap: 10px;
    }

    .button {
      padding: 10px 20px;
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
      border-radius: 4px;
      transition: background-color 0.3s ease;
    }

    .button:hover {
      background-color: #45a049;
    }

    .card-container {
      margin-top: 40px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
    }

    .card {
      width: 800px;
      padding: 20px;
      margin-bottom: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
      transition: box-shadow 0.3s ease;
      position: relative;
    }

    .card:hover {
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

    .card-header {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 10px;
    }

    .card-content {
      margin-bottom: 10px;
    }

    .card-title {
      font-weight: bold;
      margin-bottom: 10px;
      color: #333;
    }

    .card-description {
      color: #888;
      font-size: 14px;
      line-height: 1.4;
      margin-bottom: 10px;
    }

    .card-text {
      display: flex;
      justify-content: left;
      color: #555;
    }

    .card-footer {
      display: flex;
      justify-content: flex-end;
    }

    .like-button,
    .dislike-button {
      background-color: transparent;
      color: #555;
      border: none;
      cursor: pointer;
      font-size: 14px;
      padding: 6px 12px;
      border-radius: 4px;
      transition: color 0.3s ease;
      margin-left: 10px;
    }

    .like-button:hover,
    .dislike-button:hover {
      color: #4CAF50;
    }

    .like-dislike {
      position: absolute;
      bottom: 10px;
      right: 10px;
      display: flex;
      gap: 5px;
    }

    .like-dislike-icon {
      width: 24px;
      height: 24px;
    }

    @media only screen and (max-width: 600px) {
      .card {
        width: 100%;
        max-width: 400px;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <img class="profile-image" src="img/user-image.png" alt="Profile Image">

    <button style="width: 20%; margin-top: 20px;" class="button">Username:<%= loguser?.username  %></button>
    <button style="width: 20%; margin-top: 20px;" class="button">Email:<%= loguser?.email  %></button>
    <div class="button-container">
      <a href="/logout"><button style="background-color: red;" class="button">LogOut</button></a>
      <a href="/"><button class="button">Home</button></a>
    </div>
     <center><h2>My Blogs</h2></center>
    <div class="card-container">
      <% data?.forEach(function(blog){ %>
        <div class="card">
          <div class="card-header">
            <a href="/Blogs/<%= blog._id %>"><button class="like-button">Veiw more..</button></a>
            <a href="/editblog/<%= blog._id %>"><button class="like-button">Edit</button></a>
            <a href="/deleteblog/<%= blog._id %>"><button class="dislike-button">Delete</button></a>
          </div>
            <div class="card-content">
              <h2 class="card-title">Title:<%= blog.title %>
              </h2>
              <center><img style="
                width: 100%;
                height: 300px;
                border-radius: 2%;
                " src="<%= blog.coverImageUrl %>"></center>
              <p class="card-text"></p>
              <p class="card-text">Date:<%= blog.date %>
            </div>
        </div>
        <% }) %>
    </div>
  </div>
</body>

</html>